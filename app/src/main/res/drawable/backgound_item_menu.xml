<?xml version="1.0" encoding="utf-8"?>
<selector

    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            <stroke android:color="@color/cyan"
                android:width="1px"
                />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>
            <solid android:color="@color/cyan_transparent"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">

            <stroke android:color="@color/cyan"
                android:width="1px"
                />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>
            <solid android:color="#000"/>
        </shape>
    </item>
</selector>